<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CV_myanime"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardCornerRadius="4dp"
    cardElevation="4dp"
    cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/IV_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ansatsu" />

        <TextView
            android:id="@+id/TV_name"
            style="@style/StaticTextLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/IV_image"
            android:text="Large Text" />

        <TextView
            android:id="@+id/TV_type"
            style="@style/StaticTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_name"
            android:layout_below="@+id/TV_name"
            android:text="Small Text" />

        <TextView
            android:id="@+id/TV_score_tag"
            style="@style/StaticTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_type"
            android:layout_alignStart="@+id/TV_type"
            android:layout_below="@+id/TV_type"
            android:layout_marginTop="23dp"
            android:text="@string/anime_score" />

        <TextView
            android:id="@+id/TV_episode_tag"
            style="@style/StaticTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV_score_tag"
            android:layout_alignBottom="@+id/TV_score_tag"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/anime_episodes" />

        <TextView
            android:id="@+id/TV_episode"
            style="@style/StaticTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_episode_tag"
            android:layout_alignStart="@+id/TV_episode_tag"
            android:layout_below="@+id/TV_episode_tag"
            android:text="TextView" />

        <TextView
            android:id="@+id/TV_score"
            style="@style/StaticTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_score_tag"
            android:layout_alignStart="@+id/TV_score_tag"
            android:layout_below="@+id/TV_score_tag"
            android:text="TextView"
            android:layout_alignBottom="@+id/TV_episode" />
    </RelativeLayout>

</android.support.v7.widget.CardView>